{
    "manifest_version": 3,
    "name": "Support Extension",
    "description": "This is an extension to make websites comfortable to users with disabilities (and a few creative things)",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["./code/script/content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "./code/popup.html",
        "default_title": "Support Extension"
    }
}